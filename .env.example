# App URL (controls subdomain routing)
# Local:      http://localhost:3000
# Production: https://1i1.ae
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Resend (Email)
RESEND_API_KEY=your-resend-api-key

# Attendee JWT Secret (required for event attendee auth)
ATTENDEE_JWT_SECRET=your-secure-random-secret-here

# Cloudinary (Option 1: URL format from Cloudinary dashboard)
CLOUDINARY_URL=cloudinary://API_KEY:API_SECRET@CLOUD_NAME

# Cloudinary (Option 2: Separate values - use if URL format doesn't work)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# Stripe (Payments & Subscriptions)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_STARTER_MONTHLY_PRICE_ID=price_...
STRIPE_STARTER_YEARLY_PRICE_ID=price_...
STRIPE_PROFESSIONAL_MONTHLY_PRICE_ID=price_...
STRIPE_PROFESSIONAL_YEARLY_PRICE_ID=price_...
STRIPE_BUSINESS_MONTHLY_PRICE_ID=price_...
STRIPE_BUSINESS_YEARLY_PRICE_ID=price_...

# Cron Job Protection
CRON_SECRET=your-cron-secret

# Cloudflare (Custom domain management - optional)
# CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
# CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
# CLOUDFLARE_FALLBACK_ORIGIN=your-fallback-origin

# Twilio (SMS notifications via workflows - optional)
# TWILIO_SID=your-twilio-sid
# TWILIO_TOKEN=your-twilio-token
# TWILIO_FROM=+1234567890

# Resend From Address
# RESEND_FROM_EMAIL=noreply@yourdomain.com

# VirusTotal (File scanning - optional)
# VIRUSTOTAL_API_KEY=your-virustotal-key

# OpenRouter AI (AI-powered form generation - optional)
# OPENROUTER_API_KEY=your-openrouter-api-key
# OPENROUTER_MODEL=openai/gpt-4o-mini